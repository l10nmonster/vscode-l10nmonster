{
  "name": "l10nmanager",
  "displayName": "L10n Monster Manager",
  "publisher": "l10nmonster",
  "description": "UI for L10n Monster",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "type": "module",
  "main": "./out/main.cjs",
  "activationEvents": [
    "workspaceContains:/l10nmonster.mjs"
  ],
  "contributes": {
    "commands": [
    ],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "l10nmonster",
					"title": "L10n Monster Manager",
					"icon": "logo.svg"
				}
			]
		},
    "views": {
      "l10nmonster": [
        {
          "id": "statusView",
          "name": "Translation Status",
          "when": "l10nMonsterEnabled"
        },
        {
          "id": "jobsView",
          "name": "Translation Jobs",
          "when": "l10nMonsterEnabled"
        },
        {
          "id": "analyzeView",
          "name": "L10n Monster Analyzers",
          "visibility": "collapsed",
          "when": "l10nMonsterEnabled"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "statusView",
        "contents": "Status not available yet."
      },
      {
        "view": "jobsView",
        "contents": "No jobs yet!"
      },
      {
        "view": "analyzeView",
        "contents": "No analyzers available!"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "test-compile": "tsc -p ./",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./extension.js --bundle --outfile=out/main.cjs --external:vscode --external:iconv --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@l10nmonster/l10nmonster": "github:l10nmonster/l10nmonster"
  }
}
